<form action="<%= notes_url %>" method="POST">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <input type="hidden" name="note[track_id]" value="<%=track_id%>">

  <label for="note_note">Your thoughts:</label>
  <br>
  <textarea name="note[note]"
            id="note_note"
            rows="15"
            cols="15"></textarea>
  <br>
  <input type="submit"  value="Post">
  <br>

</form>
