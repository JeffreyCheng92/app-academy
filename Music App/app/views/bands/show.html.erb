<h1> <%= @band.name %> </h1>

<%= button_to "Edit", edit_band_url(@band), method: :get %>

<p> List of Albums </p>

<%= button_to "Add an Album", new_band_album_url(@band), method: :get %>

<ul>
  <% @band.albums.each do |album| %>
  <li> <%= link_to album.title, album_url(album) %> </li>
  <% end %>
</ul>

<%= button_to "DELETE BAND!?", band_url(@band), method: :delete %>
<%= button_to "Back", "/bands", method: :get %>
