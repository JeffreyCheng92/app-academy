<h1><%= @album.title %></h1>

<%= button_to "Edit", edit_album_url(@album), method: :get %>

<p> Style: <%= @album.style %> </p>

<p> List of Tracks </p>

<%= button_to "Add Trax", new_album_track_url(@album), method: :get %>

<ul>
  <% @album.tracks.each do |track| %>
  <li> <%= link_to track.name, track_url(track) %> </li>
  <% end %>
</ul>

<%= button_to "DELETE ALBUM!?", album_url(@album), method: :delete %>
<%= button_to "Back", band_url(@album.band_id), method: :get %>
