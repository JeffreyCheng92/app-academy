<h1>Adding New Band</h1>

<form action="/bands" method="POST">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">
  
  <label for="band_name">Name</label>
  <input type="text"
         name="band[name]"
         id="band_name"
         value="<%= @band.name %>">

  <input type="submit" value="Add band!">
</form>
