<h1>Adding a new track</h1>

<form action="/tracks" method="POST">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

     <label for="track_album_id">Album</label>
     <select name="track[album_id]" id="track_album_id">
       <% @albums.each do |album| %>
         <option value="<%= album.id %>"
           <%= "selected" if album.id == @album.id %>><%= album.title %></option>
       <% end %>
     </select>
     <br>

     <label for="track_style">Style</label>
       <br>
       <input type="radio" name="track[style]" value="BONUS">Bonus
       <input type="radio" name="track[style]" value="REGULAR">Regular
       <br>

     <label for="track_name">Name</label>
       <input type="text"
              name="track[name]"
              id="track_name"
              value="<%= @track.name %>">

     <input type="submit" value="Add new track!">

   </form>
